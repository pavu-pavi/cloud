{
	"AWSTemplateFormatVersion": "2010-09-09",
	"Resources": {

          "snstopic1" : 

                    {
  "Type" : "AWS::SNS::Topic",
  "Properties" : {
    "DisplayName" : "snscft",
    "TopicName" : "snscft1"
  }
},
   "snssubsc" : {
  "Type" : "AWS::SNS::Subscription",
  "Properties" : {
    "Endpoint" : "pavithra.d@brillio.com",
    "Protocol" : "email",
    "TopicArn" : {"Ref" : "snstopic1"}
  }
},

		"pook1": {
			"Type": "AWS::Events::Rule",
			"Properties": {
				"Description": "ScheduledRule",
				"ScheduleExpression": "rate(2 minutes)",
				"State": "ENABLED",
				"Targets": [{
					"Arn": "arn:aws:lambda:us-east-1:219167175716:function:cftfunction",
					"Id": "poo"
				}]
			}
		},
		"LambdaInvokePermission": {
			"Type": "AWS::Lambda::Permission",
			"Properties": {
				"FunctionName": "cftfunction",
				"Action": "lambda:InvokeFunction",
				"Principal": "events.amazonaws.com",
				"SourceArn": {
					"Fn::GetAtt": [
						"pook1",
						"Arn"
					]
				}
			}
		}
	}
}